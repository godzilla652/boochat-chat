<!DOCTYPE html>
html(lang="en")
head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(http-equiv="X-UA-Compatible", content="ie=edge")
  link(href="style/bootstrap.css" rel="stylesheet")
  link(href="style/chat.css" rel="stylesheet")
  title #{title}
body
  .container-fluid.chatContainer
    .row.chatSecondaryTitle
      .col-sm-6.col-md-6.mainTitle
        span.tone2 {Username} : 
        span.tone1#hello #{username}
      .col-sm-6.col-md-6.right_sided
        button.btn#showUsers Who'sOnline
        form(method="post", action="/exit")
          button.btn.btn-default#quit Quit
    .row.top
      .col-sm-9.col-md-9.chat.chat#scroller
          #chatMonitor
            each val in replicas
              div
                span=val.date
                span=' : '
                span=val.username
                span=' : '
                span=val.message
      .col-sm-3.col-md-2.rooms#chatRooms online:
        each val in online
          span.names=val
    .row
      .col-sm-9.col-md-9.inputArea
        input.form-control(placeholder="")#textReplica
      .col-sm-3.col-md-2.inputButton
        button.btn.btn-success#postReplica Post

  
  
    
  script(src="/scripts/socket.io-client/dist/socket.io.js" type="text/javascript")
  script(src="/scripts/chat.js" type="text/javascript")
